#:kivy 1.0.9

<ArkanivyBrick>:
    size: 50, 25
    canvas:
        Color:
            rgba: root.color
        Rectangle:
            pos: self.pos
            size: self.size


<ArkanivyBall>:
    size: 25, 25
    canvas: 
        Ellipse:
            pos: self.pos
            size: self.size

<ArkanivyPaddle>:
    size: 100, 25
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<ArkanivyGame>:
    ball: arkanivy_ball
    player: player_paddle

    ArkanivyBall:
        id: arkanivy_ball
        center_x: self.parent.center_x
        center_y: self.parent.y + self.height + 40

    ArkanivyPaddle:
        id: player_paddle
        center_x: self.parent.center_x
        center_y: self.parent.y + self.height + 10

    ArkanivyBrick:
        center_x: self.parent.center_x
        center_y: self.parent.top - 150

    ArkanivyBrick:
        center_x: self.parent.center_x - 150
        center_y: self.parent.top - 50

    ArkanivyBrick:
        center_x: self.parent.center_x - 100
        center_y: self.parent.top - 50

    ArkanivyBrick:
        center_x: self.parent.center_x - 50
        center_y: self.parent.top - 50

    ArkanivyBrick:
        center_x: self.parent.center_x
        center_y: self.parent.top - 50

    ArkanivyBrick:
        center_x: self.parent.center_x + 50
        center_y: self.parent.top - 50

    ArkanivyBrick:
        center_x: self.parent.center_x + 100
        center_y: self.parent.top - 50

    ArkanivyBrick:
        center_x: self.parent.center_x + 150
        center_y: self.parent.top - 50

    ArkanivyBrick:
        center_x: self.parent.center_x - 100
        center_y: self.parent.top - 75

    ArkanivyBrick:
        center_x: self.parent.center_x - 50
        center_y: self.parent.top - 75

    ArkanivyBrick:
        center_x: self.parent.center_x
        center_y: self.parent.top - 75

    ArkanivyBrick:
        center_x: self.parent.center_x + 50
        center_y: self.parent.top - 75

    ArkanivyBrick:
        center_x: self.parent.center_x + 100
        center_y: self.parent.top - 75

    Label:
        font_size: 70  
        center_x: 30
        top: root.top
        text: str(root.player.score)


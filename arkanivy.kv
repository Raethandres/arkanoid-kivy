#:kivy 1.0.9




<ArkanivyBall>:
    size: 25, 25
    canvas: 
        Ellipse:
            pos: self.pos
            size: self.size

<ArkanivyPaddle>:
    size: 100, 25
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<ArkanivyGame>:
    ball: arkanivy_ball
    player: player_paddle

    ArkanivyBall:
        id: arkanivy_ball
        center_x: self.parent.center_x
        center_y: self.parent.y + self.height + 70

    ArkanivyPaddle:
        id: player_paddle
        center_x: self.parent.center_x
        center_y: self.parent.y + self.height + 40

    Label:
        font_size: 70  
        center_x: 20
        top: root.top+20
        center_x: (root.width/2)-60
        text: str(root.player.score)
    Label:
        font_size: 30  
        center_x: root.width-60
        center_y: 30
        top: root.top+30
        text: str(root.player.level)
    Label:
        font_size: 70  
        center_x: 30
        top: root.top+20
        center_x: (root.width/2)+60
        text: str(root.player.total)
    Label:
        font_size: 70  
        center_x: 30
        top: root.top-100
        center_x: (root.width/2)+60
        text: str(self.parent.info)